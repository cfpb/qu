{{< qu/templates/layout}}

{{%body}}
<h1>Dataset:
  <a class="index" href="/data">/data</a>/{{dataset}}
</h1>

<h2>Formats</h2>
<ul class="inline">
  <li><a href="{{url}}.json">JSON</a></li>
  <li><a href="{{url}}.jsonp">JSONP</a></li>
  <li><a href="{{url}}.xml">XML</a></li>
</ul>

{{#resource.properties}}
  <h2>Properties</h2>
  <dl>
    {{#name}}
      <dt>Name</dt>
      <dd>{{name}}</dd>
    {{/name}}
    {{#description}}
      <dt>Description</dt>
      <dd>{{description}}</dd>
    {{/description}}
    {{#url}}
      <dt>URL</dt>
      <dd>
        <a href="{{url}}">{{url}}</a>
      </dd>
    {{/url}}
    {{#copyright}}
      <dt>Copyright</dt>
      <dd>{{copyright}}</dd>
    {{/copyright}}
  </dl>
{{/resource.properties}}
<h2>Slices</h2>
<ul id="slices">
  {{#slices}}
  <li>
    <a href="{{href}}">{{properties.name}}</a>
    <small>{{properties.info.description}}</small>
  </li>
  {{/slices}}
</ul>
<h2>Concepts</h2>
<ul id="concepts">
  {{#concepts}}
    <li>
      <a href="{{href}}">{{properties.id}}</a>
    </li>
  {{/concepts}}
</ul>
{{/body}}
